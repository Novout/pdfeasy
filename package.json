{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepublishOnly": "yarn deploy",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "test": "lerna run --scope pdfeasy test",
    "test:script": "yarn build:prod && lerna run --scope pdfeasy node:script",
    "build:prod": "lerna run --scope pdfeasy build:prod",
    "build": "lerna run --scope pdfeasy build",
    "demo": "turbo run demo",
    "format": "turbo run format",
    "deploy": "yarn bootstrap && turbo run deploy",
    "version:patch": "generi log patch",
    "version:minor": "generi log minor",
    "version:major": "generi log major"
  },
  "devDependencies": {
    "generi": "0.3.0",
    "turbo": "1.4.7",
    "lerna": "5.5.1"
  },
  "packageManager": "yarn@1.22.19"
}
